/**index.wxss**/
.video-control__body {
  height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.video-play-button {
  width: 26rpx;
  height: 36rpx;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
}

.video-play-button > image {
  width: 100%;
  height: 100%;
}

.video-control__progress {
  margin-left: 20rpx;
}

.video-control-button {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.video-control-channel {
  font-size: 20rpx;
  color: #ffffff;
  padding: 20rpx;
  text-align: center;
  font-weight: 600;
}

.video-control-button  .video-expend__icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

.video-control-button  .video-expend__icon > image {
  width: 100%;
  height: 100%;
}