.move-area__wrap {
  position: relative;
  display: inline-block;
  width: 382rpx;
  height: 6rpx;
  margin: 0 20rpx;
}
movable-area {
  width: 100%;
  height: 100%;
}

movable-view {
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  top: -8rpx;
}

.video-plaied-times {
  font-size: 20rpx;
  color: #ffffff;
}
.video-play-progress-bar__wrap .progress-box {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 1;
}
.video-play-progress-bar__wrap .progress-box.progress-box__background {
  background-color: rgba(0, 0, 0, 0.2);
}
.video-play-progress-bar__wrap .progress-box.progress-box__buffered {
  width: 60%;
  z-index: 2;
  background-color: #D0D0D0;
}
.video-play-progress-bar__wrap .progress-box.progress-box__plaied {
  width: 40%;
  z-index: 3;
  background-color: #54b0fb;
}

.video-progress__content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.progress-dot__wrap {
  display: flex;
  justify-content: center;
  width: 24rpx;
  height: 24rpx;
  z-index: 100;
}
.progress-dot__wrap > image {
  width: 24rpx;
  height: 24rpx;
}

