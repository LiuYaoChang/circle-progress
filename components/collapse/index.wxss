

.collapse-item__header {
    height: 80rpx;
    box-sizing: border-box;
    padding: 26rpx 27rpx 26rpx 25rpx;
    border: 1px solid #ebeef5;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.collapse-item__title {
    font-size: 28rpx;
    color: #666666;
    font-weight: 400;
}

.collapse-item__header .collapse-arrow {
    width: 26rpx;
    height: 15rpx;
    display: flex;
    align-items: center;
    margin-right: 27rpx;
    transition: all .2s;
    transform: rotate(0);
}
.collapse-item__header.clollapse-item__opened .collapse-arrow {
    transform: rotate(180deg);
}

.collapse-item__header .collapse-arrow > image {
    width: 100%;
    height: 100%;
}
