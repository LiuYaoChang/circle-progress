.wr-toast__content {
  position: fixed;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: baseline;
  padding: 28rpx 48rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: white;
}
.wr-toast__content.enter {
  animation: fade-enter 0.5s;
}
.wr-toast__content.leave {
  animation: fade-leave 0.5s;
}
.wr-toast__icon {
  font-size: 34rpx;
}
.wr-toast__text {
  text-align: left;
}
.wr-toast__text:not(:first-child) {
  margin-left: 12rpx;
}
@keyframes fade-enter {
  from {
    opacity: 0;
  }
}
@keyframes fade-leave {
  to {
    opacity: 0;
  }
}
@keyframes scale-enter {
  from {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
@keyframes scale-leave {
  to {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
