.popup__mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9999;
}
.popup__cancel {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10rpx;
  line-height: 1;
}
.popup__safe-bottom {
  height: 68rpx;
  width: 100%;
  background-color: #fff;
}
.popup__content--center {
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}
.popup__content--left {
  left: 0;
  top: 0;
  right: auto;
  background-color: #fff;
  bottom: env(safe-area-inset-bottom);
}
.popup__content--right {
  left: auto;
  top: 0;
  right: 0;
  background-color: #fff;
  bottom: env(safe-area-inset-bottom);
}
.popup__content--top {
  left: 0;
  top: 0;
  bottom: auto;
  right: 0;
}
.popup__content--bottom {
  left: 0;
  top: auto;
  bottom: 0;
  right: 0;
}
.popup__content--bottom .bottom-safe-area {
  display: block;
  height: env(safe-area-inset-bottom);
  background-color: white;
}
@keyframes fade-enter {
  from {
    opacity: 0;
  }
}
@keyframes fade-leave {
  to {
    opacity: 0;
  }
}
@keyframes scale-enter {
  from {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
@keyframes scale-leave {
  to {
    opacity: 0;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
  }
}
@keyframes slide-top-enter {
  from {
    transform: translate3d(0, -100%, 0);
  }
}
@keyframes slide-top-leave {
  to {
    transform: translate3d(0, -100%, 0);
  }
}
@keyframes slide-bottom-enter {
  from {
    transform: translate3d(0, 100%, 0);
  }
}
@keyframes slide-bottom-leave {
  to {
    transform: translate3d(0, 100%, 0);
  }
}
@keyframes slide-bottom-fade-enter {
  from {
    transform: translate3d(0, 100%, 0);
  }
}
@keyframes slide-bottom-fade-leave {
  to {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
}
@keyframes slide-right-enter {
  from {
    transform: translate3d(100%, 0, 0);
  }
}
@keyframes slide-right-leave {
  to {
    transform: translate3d(100%, 0, 0);
  }
}
@keyframes slide-left-enter {
  from {
    transform: translate3d(-100%, 0, 0);
  }
}
@keyframes slide-left-leave {
  to {
    transform: translate3d(-100%, 0, 0);
  }
}
