/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.centered{
  display: flex;
  justify-content: center;
}
.circle-progress__wrap {
  margin: 50rpx;
  border: 1px solid red;
}

.circle-progress-content {
  width: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.circle-progress-content > .rect {
  width: 6rpx;
  background: red;
  height: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}